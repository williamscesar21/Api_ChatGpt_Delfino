  "description": "API Express + OpenAI que responde preguntas sobre archivos .docx y .xlsx con búsqueda semántica por embeddings",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec node -r dotenv/config index.js",
    "start": "node -r dotenv/config index.js",
    "index": "node -r dotenv/config scripts/indexFiles.js"
