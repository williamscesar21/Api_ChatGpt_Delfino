# ───────────  OpenAI  ───────────

OPENAI_MODEL=gpt-4.1-mini
EMBEDDING_MODEL=text-embedding-3-large      # rápido y barato

# ───────────  Archivos y vectorstore  ───────────
FILES_DIR=./files
VECTORSTORE_PATH=./vectorstore/index.json
TOP_K=20                    # nº de fragmentos relevantes a pasar al prompt

# ───────────  Límite de contexto  ───────────
MAX_CONTEXT_TOKENS=15000    # ≈ 48 000 caracteres totales en “Contexto”

# ───────────  Indexador (tuning)  ───────────
MAX_TOKENS_PER_CHUNK=6000   # cada chunk < 8 192 tokens
BATCH_ROWS_PER_CHUNK=150    # filas que se agrupan en Excel
# MAX_ROWS_PER_SHEET=5000     # máximo filas indexadas por hoja
CHARS_PER_TOKEN=4           # estimación interna

# ───────────  Autenticación Basic  ───────────
AUTH_USER=admin
AUTH_PASS=sup3rS3cret!

# ───────────  Cache LRU  ───────────
CACHE_TTL_SEC=1800
CACHE_MAX=500

# ───────────  Conversaciones  ───────────
CHAT_TTL_MIN=60

# ───────────  Workers  ───────────
MAX_SYNC_SIZE=1048576
WORKER_POOL_SIZE=2
